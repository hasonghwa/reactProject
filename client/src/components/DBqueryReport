CREATE TABLE STYLE (
    STYLE_ID INT PRIMARY KEY,
    STYLE VARCHAR(50) NOT NULL
);

INSERT INTO STYLE (STYLE_ID, STYLE) VALUES
(1, '심플'),
(2, '화려'),
(3, '포멀(정장,오피스룩)'),
(4, '캐주얼'),
(5, '빈티지'),
(6, '스트릿'),
(7, '로맨틱(여성스러운)');

SELECT * FROM STYLE;







CREATE TABLE STYLE_RECOMMENDATION (
    RECOMMEND_ID INT PRIMARY KEY AUTO_INCREMENT,
    STYLE_ID INT NOT NULL,               -- (어떤 스타일인가?)
    COLOR_ID INT NULL,                  -- (어떤 계절에 적용되는가? - 선택 사항)
    RECOMMENDED_COLOR_ID INT NOT NULL,   -- (추천되는 색상 ID)
    RECOMMENDED_PART_ID INT NOT NULL,    -- (추천 색상이 적용되는 부위 ID)
    RECOMMEND_TEXT VARCHAR(255),         -- (추천 문구)
    
    FOREIGN KEY (STYLE_ID) REFERENCES STYLE(STYLE_ID),
    FOREIGN KEY (SEASON_ID) REFERENCES SEASON(SEASON_ID),
    FOREIGN KEY (RECOMMENDED_COLOR_ID) REFERENCES COLOR(COLOR_ID),
    FOREIGN KEY (RECOMMENDED_PART_ID) REFERENCES PART(PART_ID)
);





-- 스타일별로 자주 사용되는 기본 색상의 목록 테이블

CREATE TABLE STYLE_COLOR_WEIGHT (
    STYLE_ID INT NOT NULL,
    COLOR_ID INT NOT NULL,
    WEIGHT DECIMAL(3, 2) NOT NULL DEFAULT 1.0, 
    PRIMARY KEY (STYLE_ID, COLOR_ID),
    FOREIGN KEY (STYLE_ID) REFERENCES STYLE(STYLE_ID),
    FOREIGN KEY (COLOR_ID) REFERENCES COLOR(COLOR_ID)
);

select * from style_color_weight








