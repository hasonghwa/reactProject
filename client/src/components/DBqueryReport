(25, '올리브'),
(26, '샌드'),
(27, '테라코타');


-- 4. CATEGORY 테이블 (색상 카테고리)
DROP TABLE IF EXISTS CATEGORY;
CREATE TABLE CATEGORY (
    CATEGORY_ID INT PRIMARY KEY,
    CATEGORY VARCHAR(50) NOT NULL
);

INSERT INTO CATEGORY (CATEGORY_ID, CATEGORY) VALUES
(1, '기본 색상'),
(2, '인기 색상'),
(3, '트렌디/특수');


-- 5. STYLE 테이블 (스타일)
DROP TABLE IF EXISTS STYLE;
CREATE TABLE STYLE (
    STYLE_ID INT PRIMARY KEY,
    STYLE VARCHAR(50) NOT NULL
);

INSERT INTO STYLE (STYLE_ID, STYLE) VALUES
(1, '심플'),
(2, '화려'),
(3, '포멀(정장,오피스룩)'),
(4, '캐주얼'),
(5, '빈티지'),
(6, '스트릿'),
(7, '로맨틱(여성스러운)');


-- ====================================================================
-- 연결 및 보조 테이블 (Relationship Tables)
-- ====================================================================

-- 6. STYLE_RECOMMENDATION 테이블 (스타일별 추천 정보)
DROP TABLE IF EXISTS STYLE_RECOMMENDATION;
CREATE TABLE STYLE_RECOMMENDATION (
    RECOMMEND_ID INT PRIMARY KEY AUTO_INCREMENT,
    STYLE_ID INT NOT NULL,               -- (어떤 스타일인가?)
    SEASON_ID INT NULL,                  -- (어떤 계절에 적용되는가? - 선택 사항)
    RECOMMENDED_COLOR_ID INT NOT NULL,   -- (추천되는 색상 ID)
    RECOMMENDED_PART_ID INT NOT NULL,    -- (추천 색상이 적용되는 부위 ID)
    RECOMMEND_TEXT VARCHAR(255),         -- (추천 문구)
    
    FOREIGN KEY (STYLE_ID) REFERENCES STYLE(STYLE_ID),
    FOREIGN KEY (SEASON_ID) REFERENCES SEASON(SEASON_ID),
    FOREIGN KEY (RECOMMENDED_COLOR_ID) REFERENCES COLOR(COLOR_ID),
    FOREIGN KEY (RECOMMENDED_PART_ID) REFERENCES PART(PART_ID)
);


-- 7. STYLE_COLOR_WEIGHT 테이블 (스타일별 색상 선호도/가중치)
DROP TABLE IF EXISTS STYLE_COLOR_WEIGHT;
CREATE TABLE STYLE_COLOR_WEIGHT (
    STYLE_ID INT NOT NULL,
    COLOR_ID INT NOT NULL,
    WEIGHT DECIMAL(3, 2) NOT NULL DEFAULT 1.0,  -- 가중치 (1.0 기준)
    PRIMARY KEY (STYLE_ID, COLOR_ID),
    FOREIGN KEY (STYLE_ID) REFERENCES STYLE(STYLE_ID),
    FOREIGN KEY (COLOR_ID) REFERENCES COLOR(COLOR_ID)
);


-- ====================================================================
-- 메인 트랜잭션 테이블 (Main Transactional Table)
-- 이전 요청에 따라 ID 기반으로 수정되었으며, USERID가 포함됩니다.
-- ====================================================================

-- 8. CLOTHHISTORY 테이블 (착장 기록)
DROP TABLE IF EXISTS CLOTHHISTORY;
CREATE TABLE CLOTHHISTORY (
    HISTORY_ID INT PRIMARY KEY AUTO_INCREMENT,
    
    -- ID 컬럼 (외래 키)
    STYLE_ID INT NOT NULL,          -- 스타일 ID (STYLE 테이블 참조)
   
    COLOR_ID INT NOT NULL,          -- 색상 ID (COLOR 테이블 참조)
    CATEGORY_ID INT NOT NULL,       -- 색상 카테고리 ID (CATEGORY 테이블 참조)
    
    -- 기타 정보
    KIND_STRING VARCHAR(255),       -- 부위 (다중 선택을 위해 콤마 구분된 문자열로 저장)
    TITLE VARCHAR(30),
    CONTENTS VARCHAR(500),
    USERID VARCHAR(50) NOT NULL,    -- 사용자 ID (USER 테이블 참조)
    
    -- 외래 키 제약 조건 (참조 테이블이 생성되어 있다는 가정 하에)
    FOREIGN KEY (STYLE_ID) REFERENCES STYLE(STYLE_ID),
    
    FOREIGN KEY (COLOR_ID) REFERENCES COLOR(COLOR_ID),
    FOREIGN KEY (CATEGORY_ID) REFERENCES CATEGORY(CATEGORY_ID)
);

//색상 등록 테이블
 CREATE TABLE INSERTCOLOR (
			COLOR_ID INT PRIMARY KEY AUTO_INCREMENT,
            COLOR_NAME VARCHAR(30) NOT NULL,
            USERID VARCHAR(30) NOT NULL,
            CATEGORY_ID INT,
            FOREIGN KEY (CATEGORY_ID) REFERENCES CATEGORY(CATEGORY_ID)
            );
            SELECT * FROM INSERTCOLOR;