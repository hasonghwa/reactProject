HISTORY_ID INT PRIMARY KEY AUTO_INCREMENT,
STYLE VARCHAR(50) NOT NULL,
KIND VARCHAR(50) NOT NULL,
CATEGORY VARCHAR(50) NOT NULL,
COLOR VARCHAR(50) NOT NULL,
TITLE VARCHAR(30),
CONTENTS VARCHAR(500)
);

SELECT * FROM CLOTHHISTORY










//수정 테이블
-- ====================================================================
-- 룩업 테이블 (Lookup Tables)
-- 데이터의 일관성 및 효율성을 위해 ID 기반으로 정의되었습니다.
-- ====================================================================

-- 1. SEASON 테이블 (계절)
DROP TABLE IF EXISTS SEASON;
CREATE TABLE SEASON (
    SEASON_ID INT PRIMARY KEY,
    SEASON VARCHAR(50) NOT NULL
);

INSERT INTO SEASON (SEASON_ID, SEASON) VALUES
(1, '봄'),
(2, '여름'),
(3, '가을'),
(4, '겨울');


-- 2. PART 테이블 (옷 부위 - 상의, 하의 등)
DROP TABLE IF EXISTS PART;
CREATE TABLE PART (
    PART_ID INT PRIMARY KEY,
    KIND VARCHAR(50) NOT NULL
);

INSERT INTO PART (PART_ID, KIND) VALUES
(1, '상의'),
(2, '하의'),
(3, '모자'),
(4, '신발');


-- 3. COLOR 테이블 (색상)
DROP TABLE IF EXISTS COLOR;
CREATE TABLE COLOR (
    COLOR_ID INT PRIMARY KEY,
    COLOR VARCHAR(50) NOT NULL
);

INSERT INTO COLOR (COLOR_ID, COLOR) VALUES
(1, '흰색'),
(2, '검정'),
(3, '회색'),
(4, '빨강'),
(5, '파랑'),
